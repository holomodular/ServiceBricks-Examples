<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.Name">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- SEO Meta Tags -->
        <title>@ViewData["Title"]</title>    
        <meta name="keywords" content="@ViewData["Keywords"]">
        <meta name="description" content="@ViewData["Description"]">
        <meta name="author" content="https://ServiceBricks.com">        

        <!-- Favicon and Apple Icons -->
        <link rel="icon" type="image/x-icon" href="/favicon.ico">
   
        <!-- Scripts and Style Sheets -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root{
          --sb-grad-1:#6f42c1;
          --sb-grad-2:#00d4ff;
          --sb-bg:#0b1220;
          --sb-card:rgba(255,255,255,.06);
          --sb-border:rgba(255,255,255,.10);
          --sb-text:rgba(255,255,255,.86);
          --sb-muted:rgba(255,255,255,.62);
        }
        body{
          color: var(--sb-text);
          background:
            radial-gradient(900px 600px at 20% -10%, rgba(111,66,193,.35), transparent 55%),
            radial-gradient(900px 600px at 90% 10%, rgba(0,212,255,.22), transparent 55%),
            radial-gradient(700px 500px at 50% 110%, rgba(255,255,255,.06), transparent 50%),
            linear-gradient(180deg, var(--sb-bg), #070b14 70%);
          min-height: 100vh;
        }
        .purple
        {
            color: #6f42c1;
        }
        .glass{
          background: var(--sb-card);
          border: 1px solid var(--sb-border);
          box-shadow: 0 18px 60px rgba(0,0,0,.35);
          backdrop-filter: blur(10px);
          -webkit-backdrop-filter: blur(10px);
        }
        .brand-dot{
          width:10px;height:10px;border-radius:999px;
          background: linear-gradient(135deg, var(--sb-grad-1), var(--sb-grad-2));
          box-shadow: 0 0 22px rgba(0,212,255,.25);
          display:inline-block;
          margin-right:.5rem;
          position: relative;
          top:-1px;
        }
        .hero{
          border-radius: 1.25rem;
          overflow: hidden;
          position: relative;
        }
        .hero:before{
          content:"";
          position:absolute; inset:-2px;
          background: linear-gradient(135deg, rgba(111,66,193,.35), rgba(0,212,255,.25), rgba(255,255,255,.10));
          filter: blur(24px);
          opacity:.55;
          z-index:0;
        }
        .hero > .hero-inner{
          position:relative;
          z-index:1;
          border-radius: 1.25rem;
        }
        .kbd{
          font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
          font-size: .9rem;
          color: rgba(255,255,255,.90);
          background: rgba(0,0,0,.25);
          border: 1px solid rgba(255,255,255,.12);
          padding: .25rem .5rem;
          border-radius: .5rem;
          display: inline-block;
        }
        .codeblock{
          font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
          font-size: .9rem;
          color: rgba(255,255,255,.92);
          background: rgba(0,0,0,.28);
          border: 1px solid rgba(255,255,255,.12);
          border-radius: 1rem;
          padding: 1rem;
          overflow:auto;
          white-space: pre;
          margin: 0;
        }
        .muted{ color: var(--sb-muted); }
        .chip{
          display:inline-flex; align-items:center; gap:.45rem;
          padding:.35rem .65rem;
          border-radius:999px;
          border:1px solid rgba(255,255,255,.12);
          background: rgba(255,255,255,.05);
          color: rgba(255,255,255,.82);
          font-size:.85rem;
        }
        .list-tight li{ margin-bottom:.35rem; }
        .footer{
          color: rgba(255,255,255,.55);
          border-top: 1px solid rgba(255,255,255,.10);
        }
        a{ color: rgba(0,212,255,.95); text-decoration: none; }
        a:hover{ text-decoration: underline; }
        .btn-primary{
          background: linear-gradient(135deg, var(--sb-grad-1), var(--sb-grad-2));
          border: 0;
          box-shadow: 0 14px 35px rgba(0,0,0,.25);
        }
        .btn-outline-light{
          border-color: rgba(255,255,255,.25);
          color: rgba(255,255,255,.88);
        }
        .btn-outline-light:hover{
          background: rgba(255,255,255,.08);
        }
        .alert-soft{
          background: rgba(255,193,7,.10);
          border: 1px solid rgba(255,193,7,.22);
          color: rgba(255,255,255,.86);
        }
        .small-label{
          letter-spacing: .12em;
          text-transform: uppercase;
          font-size: .75rem;
          color: rgba(255,255,255,.65);
        }
    </style>
        <!-- View Head -->
        @RenderSection("Head", required: false)
    </head>
    <body class="layout-body">
        
        <!-- Layout Header -->
        <partial name="_HeaderPartial" />

    <main class="container pb-5">
            <!-- Layout Content -->
            @RenderBody()

        <partial name="_FooterPartial" />
    </main>
    
        

    <!-- jQuery (jsDelivr) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

    <!-- Bootstrap Bundle (jsDelivr) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


        <!-- View Scripts -->
        @RenderSection("Scripts", required: false)
       
    </body>
</html>
