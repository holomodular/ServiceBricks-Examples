<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.Name">
    <head>
        <meta charset="utf-8">

        <!-- SEO Meta Tags -->
        <title>@ViewData["Title"]</title>    
        <meta name="keywords" content="@ViewData["Keywords"]">
        <meta name="description" content="@ViewData["Description"]">
        <meta name="author" content="https://ServiceBricks.com">

        <!-- Mobile Meta Tag -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Favicon and Apple Icons -->
        <link rel="icon" type="image/x-icon" href="/favicon.ico">
   
        <!-- Scripts and Style Sheets -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        
        <!-- View Head -->
        @RenderSection("Head", required: false)

    <style>
        :root{
          --sb-bg: #070A12;
          --sb-card: rgba(255,255,255,.06);
          --sb-card-border: rgba(255,255,255,.12);
          --sb-text: rgba(255,255,255,.86);
          --sb-muted: rgba(255,255,255,.65);
          --sb-accent: #7C5CFF;
          --sb-accent2: #00D4FF;
          --sb-success: #3DDC97;
        }

        body{
          background:
            radial-gradient(1200px 600px at 15% 10%, rgba(124, 92, 255, .25), transparent 60%),
            radial-gradient(900px 500px at 90% 20%, rgba(0, 212, 255, .18), transparent 55%),
            radial-gradient(900px 500px at 50% 95%, rgba(61, 220, 151, .12), transparent 60%),
            var(--sb-bg);
          color: var(--sb-text);
          letter-spacing: .2px;
        }

        .navbar{
          transition: all .2s ease;
          background: rgba(7,10,18,.35);
          backdrop-filter: blur(10px);
          border-bottom: 1px solid rgba(255,255,255,.08);
        }        

        .brand-dot{
          width: 10px;
          height: 10px;
          border-radius: 999px;
          background: linear-gradient(135deg, var(--sb-accent), var(--sb-accent2));
          display: inline-block;
          margin-right: .5rem;
          box-shadow: 0 0 24px rgba(124,92,255,.35);
        }

        .glass{
          background: var(--sb-card);
          border: 1px solid var(--sb-card-border);
          backdrop-filter: blur(12px);
          box-shadow: 0 18px 60px rgba(0,0,0,.35);
          border-radius: 18px;
        }

        .hero{
          padding-top: 6.5rem;
          padding-bottom: 4rem;
        }

        .hero h1{
          line-height: 1.05;
          letter-spacing: -0.6px;
        }

        .badge-soft{
          background: rgba(124,92,255,.18);
          border: 1px solid rgba(124,92,255,.35);
          color: rgba(255,255,255,.9);
        }

        .btn-gradient{
          border: 0;
          background: linear-gradient(135deg, var(--sb-accent), var(--sb-accent2));
          color: #0b1020;
          font-weight: 700;
          box-shadow: 0 14px 35px rgba(124,92,255,.22);
        }
        .btn-gradient:hover{
          filter: brightness(1.06);
          transform: translateY(-1px);
        }

        .btn-outline-glow{
          border: 1px solid rgba(255,255,255,.18);
          color: rgba(255,255,255,.88);
          background: rgba(255,255,255,.04);
        }
        .btn-outline-glow:hover{
          border-color: rgba(255,255,255,.28);
          background: rgba(255,255,255,.07);
          color: rgba(255,255,255,.95);
        }

        .feature-icon{
          width: 46px;
          height: 46px;
          border-radius: 14px;
          display: grid;
          place-items: center;
          background: rgba(255,255,255,.06);
          border: 1px solid rgba(255,255,255,.10);
        }

        .code-window{
          border-radius: 18px;
          overflow: hidden;
          border: 1px solid rgba(255,255,255,.10);
          background: rgba(5,7,12,.75);
        }
        .code-topbar{
          display:flex;
          gap:.45rem;
          padding:.8rem 1rem;
          background: rgba(255,255,255,.06);
          border-bottom: 1px solid rgba(255,255,255,.08);
          align-items:center;
        }
        .dot{ width: 10px; height: 10px; border-radius: 999px; opacity:.9; }
        .dot.red{ background:#ff5f57;}
        .dot.yellow{ background:#febc2e;}
        .dot.green{ background:#28c840;}
        pre{
          margin: 0;
          padding: 1rem 1.1rem 1.1rem;
          color: rgba(255,255,255,.82);
          font-size: .92rem;
          overflow-x: auto;
        }
        .muted{ color: var(--sb-muted); }

        .pill{
          border: 1px solid rgba(255,255,255,.12);
          background: rgba(255,255,255,.04);
          border-radius: 999px;
          padding: .45rem .75rem;
          display:flex;
          gap:.5rem;
          align-items:center;
          color: rgba(255,255,255,.78);
        }

        .section{
          padding: 4rem 0;
        }

        .pricing-card .price{
          font-size: 2.25rem;
          font-weight: 800;
          letter-spacing: -0.5px;
        }

        footer{
          border-top: 1px solid rgba(255,255,255,.08);
          padding: 2rem 0;
          color: rgba(255,255,255,.62);
        }

        a.link-soft{
          color: rgba(255,255,255,.72);
          text-decoration: none;
        }
        a.link-soft:hover{ color: rgba(255,255,255,.92); }

    </style>

    </head>
    <body class="layout-body">
        
        <!-- Layout Header -->
        <partial name="_HeaderPartial" />        

        <div id="maincontent" name="maincontent" class="layout-body-view container">
            <!-- Layout Content -->
            @RenderBody()    
        </div>

        <!-- Layout Footer -->
        <partial name="_FooterPartial" />        

        <!-- Layout Scripts -->
    <!-- jQuery (jsDelivr) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"
            integrity="sha384-1H217gwSVyLSIfaLxHbE7dRb3v4mYCKbpQvzx0cegeju1MVsGrX5xXxAvs/HgeFs"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"            
            crossorigin="anonymous"></script>

    <script>
        // Small polish: smooth scrolling + navbar background on scroll + footer year
        $(function () {
          $("#year").text(new Date().getFullYear());

          // Smooth-scroll for internal anchors
          $('a[href^="#"]').on("click", function (e) {
            const target = $(this.getAttribute("href"));
            if (target.length) {
              e.preventDefault();
              $("html, body").stop().animate({ scrollTop: target.offset().top - 86 }, 350);
            }
          });          
        });
    </script>

        <!-- View Scripts -->
        @RenderSection("Scripts", required: false)
    </body>
</html>
