@model WebApp.ViewModel.Home.HomeViewModel
@{
    ViewBag.Title = "ServiceBricks — Build, Ship, and Scale Microservices Faster";
    ViewBag.Description = "ServiceBricks is a modern microservices platform that helps teams generate consistent APIs, swap storage providers, and ship faster with confidence.";
    ViewBag.Keywords = "ServiceBricks, Microservice";
}
<!-- Hero -->
<header class="hero">
    <div class="container">
        <div class="row align-items-top g-4">
            <div class="col-lg-6">
                <div class="d-inline-flex align-items-center gap-2 mb-3 pill">
                    <i class="bi bi-shield-check"></i>
                    <span class="small">Modern APIs • Consistent architecture • Provider-agnostic storage</span>
                </div>

                <h1 class="display-4 fw-bold mb-3">
                    Microservices that feel <span style="background: linear-gradient(135deg, var(--sb-accent), var(--sb-accent2)); -webkit-background-clip: text; background-clip: text; color: transparent;">effortless</span>.
                </h1>

                <p class="lead muted mb-4">
                    ServiceBricks helps teams ship production-ready services faster with a consistent API layer,
                    predictable patterns, and the flexibility to move between storage providers without rewriting your app.
                </p>

                <div class="d-flex flex-column flex-sm-row gap-2">
                    <a class="btn btn-gradient btn-lg px-4" href="/Register">
                        Get started <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                    <a class="btn btn-outline-glow btn-lg px-4" href="/Login">
                        I already have an account
                    </a>
                </div>

                <div class="mt-4 d-flex flex-wrap gap-2">
                    <span class="pill"><i class="bi bi-lightning-charge"></i><span class="small">Low-latency patterns</span></span>
                    <span class="pill"><i class="bi bi-diagram-3"></i><span class="small">Composable services</span></span>
                    <span class="pill"><i class="bi bi-database"></i><span class="small">Multi-provider support</span></span>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="glass p-3 p-md-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <div class="fw-semibold">Quick Start</div>
                            <div class="small muted">Inject an API service and start calling methods.</div>
                        </div>
                        <span class="badge text-bg-success bg-opacity-10 text-white border border-success border-opacity-25">
                            Ready
                        </span>
                    </div>

                    <div class="code-window">
                        <div class="code-topbar">
                            <span class="dot red"></span><span class="dot yellow"></span><span class="dot green"></span>
                            <span class="small muted ms-2">HomeController.cs</span>
                        </div>
                        <pre><code>// Example: simple, consistent API usage
using ServiceBricks.Logging;

public class HomeController : Controller
{
    private readonly ILogMessageApiService _service;

    public HomeController(ILogMessageApiService service)
    {
        _service = service;
    }

    public IActionResult Index()
    {
        _service.Create(new LogMessageDto
        {
            Message = "Hello, ServiceBricks!"
        });

        return View();
    }
}</code></pre>
                    </div>

                    <div class="row g-3 mt-3">
                        <div class="col-sm-6">
                            <div class="glass p-3 h-100">
                                <div class="d-flex gap-2 align-items-start">
                                    <div class="feature-icon"><i class="bi bi-plug fs-5"></i></div>
                                    <div>
                                        <div class="fw-semibold">Swap providers</div>
                                        <div class="small muted">Change storage without changing your API surface.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="glass p-3 h-100">
                                <div class="d-flex gap-2 align-items-start">
                                    <div class="feature-icon"><i class="bi bi-check2-circle fs-5"></i></div>
                                    <div>
                                        <div class="fw-semibold">Test-friendly</div>
                                        <div class="small muted">Patterns designed for reliable unit/integration testing.</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</header>

<!-- Features -->
<section id="features" class="section">
    <div class="container">
        <div class="row align-items-end mb-4">
            <div class="col-lg-7">
                <h2 class="fw-bold mb-2">Everything developers expect from a modern platform</h2>
                <p class="muted mb-0">A clean experience on the outside, a consistent architecture underneath.</p>
            </div>
            <div class="col-lg-5 text-lg-end mt-3 mt-lg-0">
                <a class="btn btn-outline-glow" href="/Register">
                    Create account <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6 col-lg-4">
                <div class="glass p-4 h-100">
                    <div class="feature-icon mb-3"><i class="bi bi-boxes fs-5"></i></div>
                    <h5 class="fw-semibold">Consistent service patterns</h5>
                    <p class="muted mb-0">Predictable endpoints, DTOs, and response shapes that stay uniform across services.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="glass p-4 h-100">
                    <div class="feature-icon mb-3"><i class="bi bi-hdd-network fs-5"></i></div>
                    <h5 class="fw-semibold">Provider-agnostic storage</h5>
                    <p class="muted mb-0">Design once, then run on the provider that fits the environment—without rewrites.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="glass p-4 h-100">
                    <div class="feature-icon mb-3"><i class="bi bi-speedometer2 fs-5"></i></div>
                    <h5 class="fw-semibold">Performance-first options</h5>
                    <p class="muted mb-0">Support low-latency workflows and lightweight responses for customer-facing apps.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="glass p-4 h-100">
                    <div class="feature-icon mb-3"><i class="bi bi-shield-lock fs-5"></i></div>
                    <h5 class="fw-semibold">Secure by default</h5>
                    <p class="muted mb-0">Designed to integrate cleanly with authentication, authorization, and modern API security.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="glass p-4 h-100">
                    <div class="feature-icon mb-3"><i class="bi bi-git fs-5"></i></div>
                    <h5 class="fw-semibold">Built for real teams</h5>
                    <p class="muted mb-0">Works well with CI/CD, code reviews, and standardized patterns across repositories.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="glass p-4 h-100">
                    <div class="feature-icon mb-3"><i class="bi bi-graph-up-arrow fs-5"></i></div>
                    <h5 class="fw-semibold">Scale without chaos</h5>
                    <p class="muted mb-0">A structure that keeps complexity controlled as services and customers grow.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ -->
<section id="faq" class="section">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-7">
                <h2 class="fw-bold mb-2">FAQ</h2>
                <p class="muted mb-0">Quick answers.</p>
            </div>
        </div>

        <div class="accordion accordion-flush glass p-2" id="faqAccordion">
            <div class="accordion-item bg-transparent border-0">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed bg-transparent text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        Is ServiceBricks<sup>&reg;</sup> FREE to use?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body muted">
                        Yes! ServiceBricks<sup>&reg;</sup> is open source software made available under the MIT license.
                        Use our public NuGet packages to get your project off the ground quickly.
                    </div>
                </div>
            </div>

            <div class="accordion-item bg-transparent border-0">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed bg-transparent text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        Can ServiceBricks<sup>&reg;</sup> use multiple databases?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body muted">
                        Yes! It is designed for provider flexibility. Configure the provider that fits your environment and keep a consistent infrastructure.
                    </div>
                </div>
            </div>

            <div class="accordion-item bg-transparent border-0">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed bg-transparent text-white" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                        Does ServiceQuery<sup>&reg;</sup> allow me to query any database?
                    </button>
                </h2>
                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body muted">
                        Yes! It is our companion library allowing you to access relational, document, cloud or embedded database engines.
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a class="btn btn-gradient btn-lg px-4" href="/Register">
                Create your account <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</section>

@section Scripts
{

}